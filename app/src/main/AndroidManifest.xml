<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.parttimejobapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PartTimeJobApplication">
        <activity android:name=".ui.home.HomeFragment"></activity>
        <activity android:name=".ui.chat.ChatFragment"></activity>
        <activity android:name=".ui.favorites.FavoriteFragment"></activity>
        <activity android:name=".ui.notifications.NotificationsFragment"></activity>
        <activity android:name=".ui.account.AccountFragment"></activity>
        <activity android:name=".CompanyRegistrationActivity" android:parentActivityName=".MainActivity"/>
        <activity android:name=".RegistrationActivity" android:parentActivityName=".MainActivity"/>
        <activity android:name=".LoginActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>