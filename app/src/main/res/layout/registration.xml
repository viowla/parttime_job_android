<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".RegistrationActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/button_borders"/>

    <TextView
        android:text="ptj"
        android:textFontWeight="500"
        android:textAllCaps="true"
        android:textSize="36dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ptj"/>
    <View
        android:layout_width="338dp"
        android:layout_height="530dp"
        android:layout_below="@id/ptj"
        android:background="@drawable/rounded_corners"
        android:layout_marginStart="38dp"/>
    <EditText
        android:layout_width="290dp"

        android:layout_height="62dp"
        android:background="#dfe0e4"
        android:layout_marginTop="11dp"
        android:layout_below="@id/ptj"
        android:id="@+id/fio"
        android:layout_marginStart="64dp"/>
    <EditText
        android:layout_width="290dp"
        android:layout_height="62dp"
        android:background="#dfe0e4"
        android:layout_marginTop="11dp"
        android:layout_below="@id/fio"
        android:id="@+id/email"
        android:layout_marginStart="64dp"/>
    <EditText
        android:layout_width="290dp"
        android:layout_height="62dp"
        android:background="#dfe0e4"
        android:layout_marginTop="11dp"
        android:layout_below="@id/email"
        android:id="@+id/phone"
        android:layout_marginStart="64dp"/>

    <EditText
        android:inputType="textPassword"
        android:layout_width="290dp"
        android:layout_height="62dp"
        android:background="#dfe0e4"
        android:layout_marginTop="11dp"
        android:layout_below="@id/phone"
        android:id="@+id/password"
        android:layout_marginStart="64dp"/>
    <EditText
        android:inputType="textPassword"
        android:layout_width="290dp"
        android:layout_height="62dp"
        android:background="#dfe0e4"
        android:layout_marginTop="11dp"
        android:layout_below="@id/password"
        android:id="@+id/password2"
        android:layout_marginStart="64dp"/>

    <Button
        android:layout_width="252dp"
        android:layout_height="56dp"
        android:layout_below="@id/password2"
        android:background="@drawable/button_borders"
        android:text="РЕГИСТРАЦИЯ!"
        android:layout_marginStart="81dp"
        android:id="@+id/regis_user"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="252dp"
        android:layout_height="56dp"
        android:layout_below="@id/regis_user"
        android:background="@drawable/button_borders"
        android:text="РЕГИСТРАЦИЯ компании!"
        android:layout_marginStart="81dp"
        android:id="@+id/regis_company"
        android:layout_marginTop="9dp"
        android:textColor="#7972e6"
        app:backgroundTint="#ffffff"
        />


</RelativeLayout>